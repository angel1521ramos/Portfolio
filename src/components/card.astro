---
interface Props {
    title?: string,
    content?: string
}
const {title = "titulo vacio", content = "contenido vacio"} = Astro.props
---


<div class="card">
    <h1>{title}</h1>
    <p>{content}</p>
</div>
<style>
    .card{
        background: #fff;
        color: #202020;
        border-radius: 5px;
        box-shadow: 0 2px 4px 0 rgba(255, 255, 255, 0.300), 0 25px 50px 0 rgba(255, 255, 255, 0.300);
        padding: 20px;
        width: 300px;
        margin-bottom: 5px;
    }
    
</style>