---
interface Props {
  userId?: string;
  title?: string;
  body?: string;
}
const {
  userId = "#",
  title = "titulo vacio",
  body = "contenido vacio",
} = Astro.props;
---

<div class="card">
  <span class="ribbon">{userId}</span>
  <h1>{title}</h1>
  <p>{body}</p>
</div>
<style>
  .card {
    background: #fff;
    color: #202020;
    border-radius: 5px;
    box-shadow:
      0 2px 4px 0 rgba(255, 255, 255, 0.3),
      0 25px 50px 0 rgba(255, 255, 255, 0.3);
    padding: 20px;
    width: 300px;
    margin-bottom: 5px;
    position: relative;
  }
  .ribbon {
    width: 60px;
    font-size: 14px;
    padding: 4px;
    position: absolute;
    right: -25px;
    top: -12px;
    text-align: center;
    border-radius: 25px;
    transform: rotate(20deg);
    background-color: #ff9800;
    color: white;
  }
</style>
